<div class="bg-lazy hero hero--{{ section.id }} hero--{{ section.settings.hero_size }}{% if section.settings.title != blank or section.settings.subheading != blank or section.settings.link != blank %} {{ section.settings.overlay_style }} {% endif %}"
     bg-url="{{ section.settings.image | img_url: '2000x2000' }}" id="hero-{{ section.id }}" >
  {% if section.settings.image == blank %}
    <div class="placeholder-background">
      {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
    </div> 
  {% endif %} 
  <div class="hero__inner">
    <div class="shideshow-wrap {{section.settings.content_alignment}}">
      <div class="imageo-text">
        {% if section.settings.title != blank %}
        <h2 class="imageo-title">
          {{ section.settings.title | escape }}
        </h2>
        {% endif %}
        {% if section.settings.subheading != blank %}
        <div class="imageo-subtitle">
          {{ section.settings.subheading }}
        </div>
        {% endif %}
        {% if section.settings.link != blank %}
        <p class="slide-button">
          <a href="{{section.settings.link}}" class="btn {{section.settings.button_style}}">{{section.settings.slide_button}}</a>
          {% if section.settings.link_1 %}
          <a href="{{section.settings.link_1}}" class="btn {{section.settings.button_style}}">{{section.settings.slide_button_1}}</a>
          {% endif %}
        </p>
        {% endif %}
      </div>
    </div>
    </div>
  </div>



{% schema %}
  {
    "name": "Image with text overlay",
    "class": "index-section index-section--flush",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "select",
        "id": "alignment",
        "label": "Image alignment",
        "default": "center",
        "options": [
          {
            "value": "top",
            "label": "Top"
          },
          {
            "value": "center",
            "label": "Middle"
          },
          {
            "value": "bottom",
            "label": "Bottom"
          }
        ]
      },
      {
        "type": "select",
        "id": "hero_size",
        "label": "Section height",
        "default": "medium",
        "options": [
          {
            "label": "Extra Small",
            "value": "x-small"
          },
          {
            "label": "Small",
            "value": "small"
          },
          {
            "label": "Medium",
            "value": "medium"
          },
          {
            "label": "Large",
            "value": "large"
          },
          {
            "label": "Extra Large",
            "value": "x-large"
          }
        ]
      },
      {
        "type": "select",
        "id": "content_alignment",
        "label": "Content alignment",
        "default": "text-center",
        "options": [
          {
          "value": "text-center",
          "label": "Center"
          },
          {
          "value": "text-left",
          "label": "Left"
          },
          {
          "value": "text-right",
          "label": "Right"
          }
        ]
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Image with text overlay"
      },
      {
        "type": "html",
        "id": "subheading",
        "label": "Text",
        "default": "<p>Use overlay text to give your customers insight into your brand. <br> Select imagery and text that relates to your style and story.</p>"
      },
      {
        "type": "text",
        "id": "slide_button",
        "label": "Button Text 1",
        "default": "Shop Now"
      },          
      {
        "type": "url",
        "id": "link",
        "label": "Button link 1"
      },
      {
        "type": "text",
        "id": "slide_button_1",
        "label": "Button Text 2",
        "default": "Shop Now"
      },          
      {
        "type": "url",
        "id": "link_1",
        "label": "Button link 2"
      },
      {
        "type": "select",
        "id": "button_style",
        "label": "Button style",
        "default": "btn-light",
        "options": [
          {
          "value": "btn-light",
          "label": "Lignt"
          },
          {
          "value": "btn-dark",
          "label": "Dark"
          },
          {
          "value": "btn-default",
          "label": "Default"
          }
        ]
      },
	  {
        "type": "select",
        "id": "overlay_style",
        "label": "Overlay Style",
        "default": "overlay-one",
        "options": [
          {
            "label": "Gradient",
            "value": "overlay-one"
          },
          {
            "label": "Color",
            "value": "hero__overlay"
          },
          {
            "label": "None",
            "value": "overlay-none"
          }
        ]
      }

    ],
    "presets": [
      {
        "name": "Image with text overlay",
        "category": "Image"
      }
    ]
  }
{% endschema %}